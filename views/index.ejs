<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/css/style.css' />
    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-resource.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
  </head>
  <body>
    <div class="container">
      <h1>
        <img src="/images/isnt.png">
        Storepost
      </h1>

      <h4><a href="https://yadi.sk/d/LBxw8nJ3fane2">скачать APK</a> </h4>

      <div data-ng-app="StorepostApp" class="sotrepost-app">
        <div data-ng-controller="ForepostCtrl">
          <div class="new-post">
            <form  class="form-inline">
              <div class="form-group">
                  <input type="text" ng-model="newPost.image_uri" class="form-control" placeholder="image_uri">
              </div>
              <div class="form-group">
                  <input type="text" ng-model="newPost.text" class="form-control"  placeholder="text">
              </div>
              <div class="form-group">
                  <input type="text" ng-model="newPost.price" class="form-control"  placeholder="price">
              </div>
              <a href="#" ng-click="save()" class="btn btn-primary">сохранить</a>
            </form>
            <a href="javascript:void(0);" class="thumbnail">
              <img class="post-img" ng-src="{{newPost.image_uri}}"/>
            </a>

            <hr>
            <div class="row">
              <div class="col-lg-8">
                <table class="table table-striped">
                  <tr>
                    <th>Изображение</th>
                    <th>Текст</th>
                    <th>Цена</th>
                    <th>Дата</th>
                    <th></th>
                  </tr>
                  <tr data-ng-repeat="post in foreposts | orderBy:'-create_at'">
                    <td><img class="post-img" ng-src="{{post.image_uri}}"/></td>
                    <td>{{post.text}}</td>
                    <td>{{post.price}}</td>
                    <th>{{post.create_at.toLocaleString()}}</th>
                    <th><a href="#" class="btn btn-default btn-xs" ng-click="remove(post)">удалить</a></th>
                  </tr>
                </table>
              </div>
              <div class="col-lg-4">
                <a href="javascript:void(0)" class="btn btn-primary" ng-click="refreshNoti()">Обновить</a>
                <table class="table table-striped">
                  <tr>
                    <th>Изображение</th>
                    <th>Кто</th>
                    <th>Когда</th>
                  </tr>
                  <tr data-ng-repeat="post in notifyers | orderBy:'-create_at'">
                    <td><a ng-href="{{post.image_uri}}" target="_blank">{{post.image_uri.substr(0,50)}}</a></td>
                    <td>{{post.user}}</td>
                    <th>{{post.create_at.toLocaleString()}}</th>
                  </tr>
                </table>
              </div>
            </div>


          </div>

        </div>
      </div>
    </div>

  </body>
</html>
